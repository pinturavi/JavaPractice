<?xml version="1.0" encoding="UTF-8"?>  
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
    
    <bean id="myFortuneService" class="com.pintu.iocXml.FortuneServiceImpl"> 
	</bean>
  
	<bean id="bBCoach" class="com.pintu.iocXml.BaseBallCoach"> 
		<constructor-arg ref="myFortuneService"/>
	</bean>
	<bean id="trackCoach" class="com.pintu.iocXml.TrackCoach"> 
		<constructor-arg ref="myFortuneService"/>
	</bean>
	<bean id="car" class = "com.pintu.iocXml.Car" p:brand= "Audi">
		<constructor-arg value="20"></constructor-arg>
		<constructor-arg value="red"></constructor-arg>
		<constructor-arg value="20"></constructor-arg>
		<property name="coach" ref="bBCoach"></property>
	</bean>
  
  
</beans>  